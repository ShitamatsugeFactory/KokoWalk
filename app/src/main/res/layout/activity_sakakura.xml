<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentFrameLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sakakura_soto" />

    <shitamatsuge.haifuri.UIParts.JuujiButton
        android:id="@+id/juujiButton"
        android:layout_width="@dimen/juuji_size"
        android:layout_height="@dimen/juuji_size"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/juuji_padding"
        android:layout_marginLeft="@dimen/juuji_padding"
        android:background="@drawable/juuji_button">

    </shitamatsuge.haifuri.UIParts.JuujiButton>

    <Button
        android:id="@+id/attack_button_0"
        android:layout_width="@dimen/sakakura_attack_button_width"
        android:layout_height="@dimen/sakakura_attack_button_width"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="80dp"
        android:onClick="onAttackButton0"
        android:text="銃" />

    <Button
        android:id="@+id/attack_button_1"
        android:layout_width="@dimen/sakakura_attack_button_width"
        android:layout_height="@dimen/sakakura_attack_button_width"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onAttackButton1"
        android:text="火" />

</FrameLayout>